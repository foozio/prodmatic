{
  "name": "prodmatic",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "tsx scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "changelog:patch": "npm version patch && echo 'Patch version updated. Please update CHANGELOG.md with bug fixes.'",
    "changelog:minor": "npm version minor && echo 'Minor version updated. Please update CHANGELOG.md with new features.'",
    "changelog:major": "npm version major && echo 'Major version updated. Please update CHANGELOG.md with breaking changes.'",
    "changelog:add": "node scripts/update-changelog.js",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@auth/prisma-adapter": "2.10.0",
    "@dnd-kit/core": "6.3.1",
