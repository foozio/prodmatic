    "next": "15.5.0",
    "next-auth": "4.24.11",
    "next-intl": "4.3.5",
    "next-themes": "^0.4.6",
    "nodemailer": "7.0.5",
    "playwright": "1.55.0",
    "prisma": "6.14.0",
    "react": "19.1.0",
    "react-day-picker": "9.9.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.62.0",
