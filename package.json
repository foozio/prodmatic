    "@types/nodemailer": "^6.4.19",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "5.0.1",
    "cross-env": "10.0.0",
    "eslint": "9.34.0",
    "eslint-config-next": "15.5.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.5",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.12",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
